<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#001427"
            android:title="Itinerary Form"
            android:titleTextColor="#FFFFFF"
            android:visibility="visible"
            app:navigationIcon="@android:drawable/ic_media_previous" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#16697A"
            android:gravity="center"
            android:padding="12dp"
            android:text="Please fill in details"
            android:textColor="#FF5F2C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Number of People -->
        <TextView
            android:id="@+id/label_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the number of people"
            android:textColor="#001427"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_people"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_border"
            android:hint="Number of people"
            android:padding="12dp"
            android:textColor="#001427"
            android:textSize="14sp" />

        <!-- Destination -->
        <TextView
            android:id="@+id/label_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:textColor="#001427"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_destination"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter Destination"
            android:padding="12dp"
            android:textColor="#001427"
            android:textSize="14sp" />

        <!-- Number of Days -->
        <TextView
            android:id="@+id/label_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Days"
            android:textColor="#001427"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_days"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter number of days"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#001427"
            android:textSize="14sp" />

        <!-- Budget -->
        <TextView
            android:id="@+id/label_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget"
            android:textColor="#001427"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_budget"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter budget"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#001427"
            android:textSize="14sp" />

        <!-- Date of Trip -->
        <TextView
            android:id="@+id/label_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Trip"
            android:textColor="#001427"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_date"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter trip date (YYYY-MM-DD)"
            android:inputType="date"
            android:padding="12dp"
            android:textColor="#001427"
            android:textSize="14sp" />

        <!-- Type of Trip -->
        <TextView
            android:id="@+id/label_trip_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Trip"
            android:textColor="#001427"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_trip_type"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter type of trip (e.g., Adventure, Relaxation)"
            android:padding="12dp"
            android:textColor="#001427"
            android:textSize="14sp" />

        <!-- Generate Button -->
        <Button
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FF5F2C"
            android:padding="12dp"
            android:text="Generate Itinerary"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
